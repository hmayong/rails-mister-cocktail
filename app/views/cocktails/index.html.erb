<div class="home-banner">
  <h1>Cocktail Time!</h1>
</div>

<div class="container">
  <div class="row mx-auto mt-2">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-md-6 col-lg-3 mt-2">
          <div class="card h-100">
            <%= link_to  cocktail_path(cocktail) do %>
            <img src = "https://source.unsplash.com/200x100/?<%= cocktail.name %>,cocktail" class="card-img">
            <div class="d-flex flex-row justify-content-between">
              <h5 class="card-title"><%= cocktail.name %></h5>
              <% end %>
              <%= link_to cocktail_path(cocktail), method: :delete, data: { confirm: "Are you sure?" } do %>
              <i class="fa fa-trash destroy_dose"></i>
              <% end %>
            </div>
          </div>
      </div>
    <% end %>
    </div>
  <%= link_to "add a new cocktail", new_cocktail_path %>
</div>

